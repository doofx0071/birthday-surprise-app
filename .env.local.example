# Birthday Surprise App Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# BIRTHDAY CONFIGURATION
# =============================================================================
# The exact date and time of your girlfriend's birthday (ISO 8601 format)
NEXT_PUBLIC_BIRTHDAY_DATE=2024-12-25T00:00:00Z

# Your girlfriend's name (used throughout the app)
NEXT_PUBLIC_GIRLFRIEND_NAME=YourGirlfriendName

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (safe to expose in frontend)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (keep secret, server-side only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# MAPBOX CONFIGURATION
# =============================================================================
# Mapbox access token for the memory map feature
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-token-here

# =============================================================================
# EMAIL CONFIGURATION (MAILTRAP)
# =============================================================================
# Mailtrap SMTP configuration for sending birthday notification emails
MAILTRAP_HOST=live.smtp.mailtrap.io
MAILTRAP_PORT=587
MAILTRAP_USERNAME=your-mailtrap-username
MAILTRAP_PASSWORD=your-mailtrap-password

# From email address for notifications (must be verified in Mailtrap)
EMAIL_FROM=noreply@yourdomain.com

# Mailtrap API token for advanced features (tracking, analytics, etc.)
# Get this from: https://mailtrap.io/api-tokens
MAILTRAP_API_TOKEN=your-mailtrap-api-token

# Note: The app will try API first, then fallback to SMTP if API fails
# Both methods work, but API provides better tracking and analytics

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Vercel deployment configuration (for GitHub Actions)
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# =============================================================================
# SECURITY
# =============================================================================
# Secret for cron job authentication
CRON_SECRET=your-random-secret-for-cron-jobs

# NextAuth secret (if using authentication)
NEXTAUTH_SECRET=your-nextauth-secret

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics 4 measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error monitoring
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Set to 'development' for local development
NODE_ENV=development

# Enable debug mode for additional logging
DEBUG=false
